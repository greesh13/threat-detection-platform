# Anthropic API
ANTHROPIC_API_KEY=your_api_key_here

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=threat_detection
POSTGRES_USER=security_user
POSTGRES_PASSWORD=changeme

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_LOGS=security-logs
KAFKA_TOPIC_ALERTS=security-alerts

# Detection Settings
DETECTION_FAILED_LOGIN_THRESHOLD=5
DETECTION_FAILED_LOGIN_WINDOW_MINUTES=10
DETECTION_API_RATE_LIMIT=100
DETECTION_CONFIDENCE_THRESHOLD_AUTO_BLOCK=90

# Agent Settings
AGENT_REASONING_TEMPERATURE=0.3
AGENT_REASONING_MAX_TOKENS=1000
AGENT_REASONING_MODEL=claude-sonnet-4-20250514

# Action Executor Settings
ACTION_RATE_LIMIT_PER_HOUR=100
ACTION_RATE_LIMIT_PER_MINUTE=10
ACTION_AUTO_EXPIRE_IP_BLOCK_HOURS=1
ACTION_FALSE_POSITIVE_THRESHOLD=0.20

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
